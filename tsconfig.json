{
	"compilerOptions": {
		"sourceMap": true,

		"incremental": true,

		"moduleResolution": "node",
		"types": [
			"./node_modules/@types/webpack-env",
      "./node_modules/@types/youtube"
		],
		
		"module": "esnext",
		"target": "esnext",
		"lib": [
			"ESNext",
			"DOM"
		],

		"baseUrl": ".",
		"rootDir": "./src",
		"paths": {
		  "@/*": [
		    "./src/*"
		  ],
			"@index/*": [
		    "src/app/index/*"
		  ],
      "@test/*": [
		    "src/app/test/*"
		  ],
		  "@rock/*": [
		    "src/app/poszukiwacze-camienia/*"
		  ],
			"@eng/*": [
				"src/app/santa-in-trouble/*"
			],
			"@help/*": [
				"src/app/pomoz-abelardowi/*"
			],
		},

		"strict": true,
		"allowJs": false,
    "checkJs": false,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.vue"
	],
	"exclude": [
		"./src/**/*.test.ts"
	]
}
