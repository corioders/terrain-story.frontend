{
	"compilerOptions": {
		"incremental": true,

		"module": "ESNext",
		"target": "ESNext",
		"types": [
			"./node_modules/@types/webpack-env",
      "./node_modules/@types/youtube"
		],
		"lib": [
			"ESNext",
			"DOM"
		],

		"moduleResolution": "node",
		"baseUrl": ".",
		"rootDir": "./src",
		"paths": {
		  "@/*": [
		    "./src/*"
		  ],
			"@scssGlobals/*": [
				"src/scss/global/*"
			],
			"@index/*": [
		    "src/app/index/*"
		  ],
      "@test/*": [
		    "src/app/test/*"
		  ],
		  "@rock/*": [
		    "src/app/poszukiwacze-camienia/*"
		  ],
			"@eng/*": [
				"src/app/santa-in-trouble/*"
			],
			"@help/*": [
				"src/app/pomoz-abelardowi/*"
			],
			"@recap/*": [
				"src/app/wygraj-mature/*"
			],
			"@fin/*": [
				"src/app/finansowe-zaskoczenie/*"
			],
		},

		"outDir": "out",
		"sourceMap": true,
		"declaration": true,

		"strict": true,
		"allowJs": false,
		"checkJs": false,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.vue",
	],
}
